<% unless flash.empty? %>

  <script type="text/javascript">

    <% flash.each do |k, v| %>

        <% x = k.to_s.gsub('alert', 'error').gsub('notice', 'success') %>

        
            new Noty({
                type: '<%= x %>',
                layout: 'bottomRight',
                timeout: '3000',
                text: '<%= v %>',
                theme: 'sunset'
            }).show();
        
    <% end %>

  </script>
  
<% end %>