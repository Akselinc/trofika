<div class="row justify-content-center align-items-center vh-100 py-5">
  <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 col-xxl-5">
    <!-- Sign up START -->
    <div class="card card-body rounded-3 p-4 p-sm-5">
      <div class="text-center mb-4">
        <!-- Title -->
        <h2 class="mb-2">Log In</h2>
        <span class="d-block">Need an account? 
          <%= link_to "Click here to create an account", new_user_registration_path %>
        </span>
      </div>
      <!-- Form START -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :class => 'row g-3'}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <!-- Email -->
        <div class="mb-3 input-group-lg">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3 input-group-lg">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>        

        <div class="mb-3 d-sm-flex justify-content-between">
          <% if devise_mapping.rememberable? %>
            <div>
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
            <%= link_to "Forgot password?", new_user_password_path %>
          <% end %>
        </div>

       
        
        <!-- Button -->
        <div class="d-grid">
          <%= f.submit "Log In", class: "btn btn-lg btn-primary" %>
        </div>
        <!-- Copyright -->
        <p class="mb-0 mt-3 text-center">Â©2022 <a target="_blank" href="https://eliasglyptis.com/">Elias Glyptis.</a> All rights reserved</p>
      <% end %>
      <!-- Form END -->
    </div>
    <!-- Sign up END -->
  </div>
</div>

