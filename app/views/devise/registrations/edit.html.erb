<!-- Main content START -->
<div class="row">
  <div class="col-lg-6 vstack gap-4">
    <!-- Setting Tab content START -->
    <div class="tab-content py-0 mb-0">

      <!-- Account setting tab START -->
      <div class="tab-pane show active fade" id="nav-setting-tab-1">
        <!-- Account settings START -->
        <div class="card mb-4">
          
          <!-- Title START -->
          <div class="card-header border-0 pb-0">
            <h1 class="h5 card-title">Account Settings</h1>
            <p class="mb-0">He moonlights difficult engrossed it, sportsmen. Interested has all Devonshire difficulty gay assistance joy. Unaffected at ye of compliment alteration to.</p>
          </div>
          <!-- Card header START -->
          <!-- Card body START -->
          <div class="card-body">
            <!-- Form settings START -->
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                html: { method: :put, :class => 'row g-3'}) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <!-- First name -->
              <div class="col-sm-6">
                <%= f.label :full_name, class: 'form-label' %>
                <%= f.text_field :full_name, class: 'form-control', placeholder: 'Enter your full name' %>
              </div>
              <!-- Last name -->
              <div class="col-sm-6">
                <%= f.label :email, class: 'form-label' %>
                <%= f.email_field :email, class: 'form-control', placeholder: current_user.email %>
              </div>
              <!-- Additional name -->
              <div class="col-sm-12">
                <label class="form-label">From / Location</label>
                <%= f.text_field :location, class: 'form-control', placeholder: '' %>
              </div>
              <!-- User name -->
              <div class="col-sm-6">
                <label class="form-label">Languages Spoken</label>
                <%= f.text_field :language, class: 'form-control', placeholder: '' %>
              </div>
              <div class="col-sm-6">
                <label class="form-label">Phone number</label>
                <input type="text" class="form-control" placeholder="" value="(678) 324-1251">
                <!-- Add new number -->
                <a class="btn btn-sm btn-dashed rounded mt-2" href="#!"> <i class="bi bi-plus-circle-dotted me-1"></i>Add new phone number</a>
              </div>
              
              <!-- Page information -->
              <div class="col-12">
                <label class="form-label">About yourself</label>
                <%= f.text_area :about, class: 'form-control', placeholder: current_user.about, rows: 4 %>
                <small>Enter a praragraph about yourself</small>
              </div>
              
              <div class="col-12 mt-3">
                  <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                      <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                          <strong class="card-title">Change your password</strong>
                        </button>
                        
                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <p class="mb-0">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                        <% end %>
                        
                      </h2>
                      <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                          <div class="col-sm-12">
                            <%= f.label "Leave blank if you don't want to change it", class: 'form-label' %>
                            <%= f.password_field :password, class: 'form-control', placeholder: 'Enter a new password' %>
                          </div>
                          
                          <div id="unconfirmed-email" class="some-class">
                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                            <% end %>
                          </div>

                          <!-- Confirm password -->
                          <div class="col-sm-12">
                            <%= f.label "Confirm your new password", class: 'form-label' %>
                            <%= f.password_field :password_confirmation, class: 'form-control' %>
                          </div>

                          <div class="col-sm-12">
                            <%= f.label "Enter Current Password", class: 'form-label' %>
                            <%= f.password_field :current_password, class: 'form-control' %>
                          </div>

                         

                        </div>
                       
                      </div>
                    </div>
                  </div>
              </div>

              <!-- Button  -->
              <div class="col-12 text-end">
                <%= f.submit 'Save Changes', class: "btn btn-sm btn-primary mb-0 mt-3" %>
              </div>
            <% end %>
            <!-- Settings END -->
          </div>
        <!-- Card body END -->
        </div>
        <!-- Account settings END -->

       
      </div>
      <!-- Account setting tab END -->
    </div>
    <!-- Setting Tab content END -->
  </div>
</div>
